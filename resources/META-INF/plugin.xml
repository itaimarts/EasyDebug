<idea-plugin>
  <id>com.dell.easydebug</id>
  <name>Easy Debug For RecoverPoint</name>
  <description>Plugin to enable remote debugging, replace Jar and reset branch to RPA version.</description>
  <version>1.0</version>
  <vendor>DellEMC</vendor>

  <idea-version since-build="173.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="RP Debug" icon="/myToolWindow/debugger-13.png" anchor="right" factoryClass="com.dell.easydebug.ui.ToolWindowFactoryImpl"/>

  </extensions>

  <actions>
      <action id="ReplaceJar" class="com.dell.easydebug.replacejar.ReplaceJar" text="Replace Jar">
          <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
      </action>
  </actions>
</idea-plugin>